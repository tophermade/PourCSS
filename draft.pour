// variables
var textColor 	= "#333";
var tablet		= "960px"



// modules
mod basics(param1, param2){
	font-size: param1
	background: url(param2)
}



// syntax examples
header{
	margin: 10px
	padding: 10px
	color: $textColor

	.nested-class{
		position: relative
		font-size: 18px
	}

	basics(12px, img/bg.jpg)

	@tablet{
		max-width: 90%
	}

	@960px{
		max-width: 940px
	}
}

article{
	module(14px, rgba(0,0,0,.5))

	@tablet{
		max-width: 80%
	}

	@960px{
		max-width: 880px
	}
}